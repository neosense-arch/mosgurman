      {#<div class="search-form">#}
      {#<form action="">#}
      {#<fieldset>#}
      {#<input type="text" value="Поиск по названию...">#}
      {#<input type="submit" value="">#}
      {#</fieldset>#}
      {#</form>#}
      {#</div>#}
    </div>
    <div class="tab-list">
      <div id="m1tab1">
        <div class="items">
          <ul>
            {% for item in items %}
              <li{% if loop.index % 4 == 0 %} class="nth"{% endif %}>
                <div class="icon">
                  {% if item.settings.group %}
                    <img src="{{ asset('bundles/mgfront/images/' ~ item.settings.group|default('all') ~ '.png') }}"/>
                  {% endif %}
                </div>
                {% if item.settings.isNew %}
                  <div class="icon2">
                    <img src="{{ asset('bundles/mgfront/images/bg3.png') }}"
                         width="78"
                         height="46"
                         alt="Новинка осетинский пирог">
                  </div>
                {% endif %}
                {% if item.settings.isSale %}
                  <div class="icon2">
                    <img src="{{ asset('bundles/mgfront/images/bg2.png') }}"
                         width="78"
                         height="46"
                         alt="Скидка на осетинский пирог">
                  </div>
                {% endif %}
                <div class="item-img">
                  <a href="{{ url('ns_catalog_item', { 'categorySlug': item.category.slug, 'itemSlug': item.slug}) }}">
                    <img src="{{ '/upload/j/' ~ item.settings.photo }}"
                         alt="{{ item.title }}"
                         width="243" height="156"/>
                  </a>
                </div>
                <a href="{{ url('ns_catalog_item', { 'categorySlug': item.category.slug, 'itemSlug': item.slug}) }}">{{ item.title }}</a>

                <div class="price">
                  <ul>
                    {% for price in item.settings.prices %}
                      {% if loop.index < 4 %}
                        <li>
                          <span>{{ price.weight }} г</span>
                          <strong>{{ price.price }} руб</strong>

                          <div class="drop">
                            <span>{{ price.weight }} г</span>
                            <strong>{{ price.price }} руб</strong>
                            <ul data-product-id="{{ item.id }}" data-product-weigth="{{ price.weight }}">
                              <li><a href="#">1 пирог</a></li>
                              <li><a href="#">2 пирога</a></li>
                              <li><a href="#">3 пирога</a></li>
                              <li><a href="#">4 пирога</a></li>
                              <li><a href="#">5 пирогов</a></li>
                            </ul>
                          </div>
                        </li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                </div>
              </li>
            {% endfor %}
