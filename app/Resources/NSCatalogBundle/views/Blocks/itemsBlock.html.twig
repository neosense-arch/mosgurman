{% set nomeat = false %}
{% set hot = false %}
{% set season = false %}
{% set sweet = false %}

{% for item in items %}
  {% if item.settings.group == 'nomeat' %}
    {% set nomeat = true %}
  {% endif %}

  {% if item.settings.group == 'hot' %}
    {% set hot = true %}
  {% endif %}

