    {% block top %}
      {% include "::top.html.twig" %}
    {% endblock top %}

    {% block slider %}
      {% include "::slider.html.twig" %}
    {% endblock slider %}

    {% block nav %}
      {% include "::nav.html.twig" %}
    {% endblock nav %}

    {% block main %}
      {% include "::main.html.twig" %}
    {% endblock main %}

    {% block footer %}
      {% include "::footer.html.twig" %}
