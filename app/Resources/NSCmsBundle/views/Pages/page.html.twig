{% extends "::base.html.twig" %}

{% block top %}
  {{ ns_cms_area(blocks, 'header') }}
{% endblock top %}

{% block slider %}
  {{ ns_cms_area(blocks, 'slider') }}
{% endblock slider %}

{% block nav %}
  <div class="nav">
    {{ ns_cms_area(blocks, 'catalog_menu') }}
  </div>
{% endblock nav %}

{% block main %}
  <div id="main">
    {{ ns_cms_area(blocks, 'content') }}
  </div>
{% endblock main %}

{% block footer %}
  <div id="footer">
    <div class="footer-conteyner">
      <div class="footer-left">
        {{ ns_cms_area(blocks, 'copyright') }}
      </div>
      <div class="footer-right">
        <div class="footer-nav">
          {{ ns_cms_area(blocks, 'footer_menu') }}
        </div>
        <div class="soc-img">
          <div class="footer-soc">
            <script type="text/javascript" src="//yandex.st/share/share.js"
                    charset="utf-8"></script>
            <div class="yashare-auto-init" data-yashareL10n="ru"
                 data-yashareType="button"
                 data-yashareQuickServices="vkontakte,facebook,twitter,odnoklassniki,moimir,gplus"></div>
          </div>
          <div class="footer-img">
            <img src="{{ asset('bundles/mgfront/images/img-footer.png') }}" width="104" height="24"
                 alt="image description">
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock footer %}
